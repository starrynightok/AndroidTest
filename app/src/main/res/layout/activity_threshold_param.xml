<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fadingEdge="vertical"
    android:scrollbars="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:stretchColumns="1">

            <TableRow>

                <TextView
                    android:layout_width="120dip"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="空白帧数"
                    android:textColor="#3F51B5"
                    android:textSize="12dip" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="120dip"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="慢行空白帧数"
                    android:paddingLeft="5dip"
                    android:textSize="15dip" />

                <EditText
                    android:id="@+id/slowEmptyFrame"
                    android:layout_width="match_parent"
                    android:layout_height="36dip"
                    android:layout_margin="5dip"
                    android:background="@drawable/bg_edittext_selector"
                    android:inputType="number"
                    android:padding="5dip"
                    android:textColorHint="#AAAAAA" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="120dip"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="行人空白帧数"
                    android:paddingLeft="5dip"
                    android:textSize="15dip" />

                <EditText
                    android:id="@+id/peopleEmptyFrame"
                    android:layout_width="match_parent"
                    android:layout_height="36dip"
                    android:layout_margin="5dip"
                    android:background="@drawable/bg_edittext_selector"
                    android:inputType="number"
                    android:padding="5dip"
                    android:textColorHint="#AAAAAA" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="120dip"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="正常空白帧数"
                    android:paddingLeft="5dip"
                    android:textSize="15dip" />

                <EditText
                    android:id="@+id/normalEmptyFrame"
                    android:layout_width="match_parent"
                    android:layout_height="36dip"
                    android:layout_margin="5dip"
                    android:background="@drawable/bg_edittext_selector"
                    android:inputType="number"
                    android:padding="5dip"
                    android:textColorHint="#AAAAAA" />
            </TableRow>
        </TableLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="fill_parent"
                android:layout_height="36dip"
                android:layout_weight="1"
                android:background="@drawable/shape_green"
                android:layout_margin="5dip"
                android:textColor="#FFFFFF"
                android:textSize="18dip"
                android:onClick="emptyFrame_query"
                android:text="查询" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="36dip"
                android:layout_weight="1"
                android:background="@drawable/shape_blue"
                android:layout_margin="5dip"
                android:textColor="#FFFFFF"
                android:textSize="18dip"
                android:onClick="emptyFrame_set"
                android:text="设置" />
        </LinearLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="3dp"
            android:background="#3F51B5" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:stretchColumns="1">

            <TableRow>

                <TextView
                    android:layout_width="120dip"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="长高系数"
                    android:textColor="#3F51B5"
                    android:textSize="12dip" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="120dip"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="垂直长度系数"
                    android:paddingLeft="5dip"
                    android:textSize="15dip" />

                <EditText
                    android:id="@+id/verticalLenRate"
                    android:layout_width="match_parent"
                    android:layout_height="36dip"
                    android:layout_margin="5dip"
                    android:background="@drawable/bg_edittext_selector"
                    android:inputType="number"
                    android:padding="5dip"
                    android:textColorHint="#AAAAAA" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="120dip"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="倾斜长度系数"
                    android:paddingLeft="5dip"
                    android:textSize="15dip" />

                <EditText
                    android:id="@+id/tiltLenRate"
                    android:layout_width="match_parent"
                    android:layout_height="36dip"
                    android:layout_margin="5dip"
                    android:background="@drawable/bg_edittext_selector"
                    android:inputType="number"
                    android:padding="5dip"
                    android:textColorHint="#AAAAAA" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="120dip"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="垂直速度系数"
                    android:paddingLeft="5dip"
                    android:textSize="15dip" />

                <EditText
                    android:id="@+id/verticalSpeedRate"
                    android:layout_width="match_parent"
                    android:layout_height="36dip"
                    android:layout_margin="5dip"
                    android:background="@drawable/bg_edittext_selector"
                    android:inputType="number"
                    android:padding="5dip"
                    android:textColorHint="#AAAAAA" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="120dip"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="倾斜速度系数"
                    android:paddingLeft="5dip"
                    android:textSize="15dip" />

                <EditText
                    android:id="@+id/tiltSpeedRate"
                    android:layout_width="match_parent"
                    android:layout_height="36dip"
                    android:layout_margin="5dip"
                    android:background="@drawable/bg_edittext_selector"
                    android:inputType="number"
                    android:padding="5dip"
                    android:textColorHint="#AAAAAA" />
            </TableRow>
        </TableLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="fill_parent"
                android:layout_height="36dip"
                android:layout_weight="1"
                android:background="@drawable/shape_green"
                android:layout_margin="5dip"
                android:textColor="#FFFFFF"
                android:textSize="18dip"
                android:onClick="rate_query"
                android:text="查询" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="36dip"
                android:layout_weight="1"
                android:background="@drawable/shape_blue"
                android:layout_margin="5dip"
                android:textColor="#FFFFFF"
                android:textSize="18dip"
                android:onClick="rate_set"
                android:text="设置" />
        </LinearLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="3dp"
            android:background="#3F51B5" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:stretchColumns="1">

            <TableRow>

                <TextView
                    android:layout_width="120dip"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="异常报警"
                    android:textColor="#3F51B5"
                    android:textSize="12dip" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="120dip"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="断网数据上传"
                    android:paddingLeft="5dip"
                    android:textSize="15dip" />

                <Spinner
                    android:id="@+id/disconnNet"
                    android:layout_width="match_parent"
                    android:layout_height="36dip"
                    android:layout_margin="5dip"
                    android:padding="5dip"
                    android:textColorHint="#AAAAAA" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="120dip"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="异常波形上传"
                    android:paddingLeft="5dip"
                    android:textSize="15dip" />

                <Spinner
                    android:id="@+id/exWave"
                    android:layout_width="match_parent"
                    android:layout_height="36dip"
                    android:layout_margin="5dip"
                    android:padding="5dip"
                    android:textColorHint="#AAAAAA" />
            </TableRow>
        </TableLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="fill_parent"
                android:layout_height="36dip"
                android:layout_weight="1"
                android:background="@drawable/shape_green"
                android:layout_margin="5dip"
                android:textColor="#FFFFFF"
                android:textSize="18dip"
                android:onClick="ex_alarm_query"
                android:text="查询" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="36dip"
                android:layout_weight="1"
                android:background="@drawable/shape_blue"
                android:layout_margin="5dip"
                android:textColor="#FFFFFF"
                android:textSize="18dip"
                android:onClick="ex_alarm_set"
                android:text="设置" />
        </LinearLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="3dp"
            android:background="#3F51B5" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:stretchColumns="1">

            <TableRow>

                <TextView
                    android:layout_width="120dip"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="车型阈值"
                    android:textColor="#3F51B5"
                    android:textSize="12dip" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="120dip"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="小型车长度阈值"
                    android:paddingLeft="5dip"
                    android:textSize="15dip" />

                <EditText
                    android:id="@+id/xxcLenThre"
                    android:layout_width="match_parent"
                    android:layout_height="36dip"
                    android:layout_margin="5dip"
                    android:background="@drawable/bg_edittext_selector"
                    android:inputType="number"
                    android:padding="5dip"
                    android:textColorHint="#AAAAAA" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="120dip"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="大型车长度阈值"
                    android:paddingLeft="5dip"
                    android:textSize="15dip" />

                <EditText
                    android:id="@+id/dxcLenThre"
                    android:layout_width="match_parent"
                    android:layout_height="36dip"
                    android:layout_margin="5dip"
                    android:background="@drawable/bg_edittext_selector"
                    android:inputType="number"
                    android:padding="5dip"
                    android:textColorHint="#AAAAAA" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="120dip"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="小型车高度阈值"
                    android:paddingLeft="5dip"
                    android:textSize="15dip" />

                <EditText
                    android:id="@+id/xxcHeightThre"
                    android:layout_width="match_parent"
                    android:layout_height="36dip"
                    android:layout_margin="5dip"
                    android:background="@drawable/bg_edittext_selector"
                    android:inputType="number"
                    android:padding="5dip"
                    android:textColorHint="#AAAAAA" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="120dip"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="大客车长度阈值"
                    android:paddingLeft="5dip"
                    android:textSize="15dip" />

                <EditText
                    android:id="@+id/dkcLenThre"
                    android:layout_width="match_parent"
                    android:layout_height="36dip"
                    android:layout_margin="5dip"
                    android:background="@drawable/bg_edittext_selector"
                    android:inputType="number"
                    android:padding="5dip"
                    android:textColorHint="#AAAAAA" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="120dip"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="大客车高度阈值"
                    android:paddingLeft="5dip"
                    android:textSize="15dip" />

                <EditText
                    android:id="@+id/dkcHeightThre"
                    android:layout_width="match_parent"
                    android:layout_height="36dip"
                    android:layout_margin="5dip"
                    android:background="@drawable/bg_edittext_selector"
                    android:inputType="number"
                    android:padding="5dip"
                    android:textColorHint="#AAAAAA" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="120dip"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="集装箱高度MAX"
                    android:paddingLeft="5dip"
                    android:textSize="15dip" />

                <EditText
                    android:id="@+id/jzxHeightMax"
                    android:layout_width="match_parent"
                    android:layout_height="36dip"
                    android:layout_margin="5dip"
                    android:background="@drawable/bg_edittext_selector"
                    android:inputType="number"
                    android:padding="5dip"
                    android:textColorHint="#AAAAAA" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="120dip"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="集装箱高度MIN"
                    android:paddingLeft="5dip"
                    android:textSize="15dip" />

                <EditText
                    android:id="@+id/jzxHeightMin"
                    android:layout_width="match_parent"
                    android:layout_height="36dip"
                    android:layout_margin="5dip"
                    android:background="@drawable/bg_edittext_selector"
                    android:inputType="number"
                    android:padding="5dip"
                    android:textColorHint="#AAAAAA" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="120dip"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="优先级"
                    android:paddingLeft="5dip"
                    android:textSize="15dip" />

                <Spinner
                    android:id="@+id/first"
                    android:layout_width="match_parent"
                    android:layout_height="36dip"
                    android:layout_margin="5dip"
                    android:padding="5dip"
                    android:textColorHint="#AAAAAA" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="120dip"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="阈值类型"
                    android:paddingLeft="5dip"
                    android:textSize="15dip" />

                <Spinner
                    android:id="@+id/threType"
                    android:layout_width="match_parent"
                    android:layout_height="36dip"
                    android:layout_margin="5dip"
                    android:padding="5dip"
                    android:textColorHint="#AAAAAA" />
            </TableRow>
        </TableLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="fill_parent"
                android:layout_height="36dip"
                android:layout_weight="1"
                android:background="@drawable/shape_green"
                android:layout_margin="5dip"
                android:textColor="#FFFFFF"
                android:textSize="18dip"
                android:onClick="thre_query"
                android:text="查询" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="36dip"
                android:layout_weight="1"
                android:background="@drawable/shape_blue"
                android:layout_margin="5dip"
                android:textColor="#FFFFFF"
                android:textSize="18dip"
                android:onClick="thre_set"
                android:text="设置" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>